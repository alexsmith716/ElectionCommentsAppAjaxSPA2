block content

  .container

    // Page Heading/Breadcrumbs
    .row
      .col-lg-12
        h1.page-header
          | Contact
          // small Subheading
        |                 
        ol.breadcrumb
          li
            a(href='index.html') Home
          |                     
          li.active Contact

    .row
      // Map Column
      .col-md-8
        // Embedded Google Map
        iframe(scrolling='no', marginheight='0', marginwidth='0', src='', width='100%', height='400px', frameborder='0')
      // Contact Details Column
      .col-md-4
        h3 Contact Details
        |                 
        p
          | 260 Irving Plaxa
          br
          | New York, NY 10003
          br
        |                 
        p
          i.fa.fa-phone
          |  
          |                     
          abbr(title='Phone') Phone
          | : (212) 555-1234
        |                 
        p
          i.fa.fa-envelope-o
          |  
          |                     
          abbr(title='Email') Email
          | : 
          a(href='mailto:contact@electionapp2017.com') contact@electionapp2017.com
        |                 
        p
          i.fa.fa-clock-o
          |  
          |                     
          abbr(title='Hours') Hours
          | : Monday - Friday: 9:00 AM to 5:00 PM
        |                 
        ul.list-unstyled.list-inline.list-social-icons
          li
            a(href='#')
              i.fa.fa-facebook-square.fa-2x
          |                     
          li
            a(href='#')
              i.fa.fa-linkedin-square.fa-2x
          |                     
          li
            a(href='#')
              i.fa.fa-twitter-square.fa-2x
          |                     
          li
            a(href='#')
              i.fa.fa-google-plus-square.fa-2x
    // /.row
    // Contact Form
    // In order to set the email address and subject line for the contact form go to the bin/contact_me.php file.
    .row
      .col-md-8
        h3 Send us a Message
        |                 
        form#contactForm(name='sentMessage', novalidate='')
          .control-group.form-group
            .controls
              label Full Name:
              |                             
              input#name.form-control(required='', data-validation-required-message='Please enter your name.', type='text')
              |                             
              p.help-block
          |                     
          .control-group.form-group
            .controls
              label Phone Number:
              |                             
              input#phone.form-control(required='', data-validation-required-message='Please enter your phone number.', type='tel')
          |                     
          .control-group.form-group
            .controls
              label Email Address:
              |                             
              input#email.form-control(required='', data-validation-required-message='Please enter your email address.', type='email')
          |                     
          .control-group.form-group
            .controls
              label Message:
              |                             
              textarea#message.form-control(rows='10', cols='100', required='', data-validation-required-message='Please enter your message', maxlength='999', style='resize:none')
          |                     
          #success
          // For success/fail messages
          button.btn.btn-primary(type='submit') Send Message

    hr

    // Footer
    include includes/footer/footer.pug
