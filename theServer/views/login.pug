
// View Container Content
block content

  .container
    // Page Heading/Breadcrumbs
    .row
      .col-lg-12
        h1.page-header
          | Welcome back!
          // <small></small>
        |                 
        ol.breadcrumb
          li
            a(href='#') Home
          |                     
          li.active Log In
    // /.row
    .row
      .col-lg-12
        h3 Please sign in
        |                 
        form(action="https://localhost:3000/api/loginuser", id="loginForm", name="loginForm", method="post", enctype="application/x-www-form-urlencoded")
          .control-group.form-group
            .controls
              label Email Address:
              |                             
              input#login-email.form-control(name='login-email', placeholder='Email Address', title='Please enter a valid Email Address', required='', type='text')
          |                     
          .control-group.form-group
            .controls
              label Password:
              |                             
              input#login-password.form-control(name='login-password', placeholder='Password', autocomplete='off', title='Please enter your Password', required='', type='password')
              |                             
              p.help-block
          |                     
          .control-group.form-group
            #success
            |                     
            button.btn.btn-primary(type='submit', id="loginSubmitBtn") Submit
      // /.row
      hr
    // /.container
